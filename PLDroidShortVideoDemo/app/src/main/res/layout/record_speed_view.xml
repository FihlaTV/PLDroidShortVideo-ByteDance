<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:background="@drawable/bg_record_speed_bar"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/super_slow_speed_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.98"
        android:background="@drawable/btn_record_speed_selector"
        android:gravity="center"
        android:text="极慢"
        android:textColor="@color/record_speed_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/slow_speed_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/btn_record_speed_selector"
        android:gravity="center"
        android:text="慢"
        android:textColor="@color/record_speed_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/normal_speed_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/btn_record_speed_selector"
        android:gravity="center"
        android:text="正常"
        android:textColor="@color/record_speed_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/fast_speed_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/btn_record_speed_selector"
        android:gravity="center"
        android:text="快"
        android:textColor="@color/record_speed_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/super_fast_speed_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.98"
        android:background="@drawable/btn_record_speed_selector"
        android:gravity="center"
        android:text="极快"
        android:textColor="@color/record_speed_text"
        android:textSize="15sp" />
</LinearLayout>