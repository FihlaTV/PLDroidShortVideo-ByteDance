<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_record_title"
    android:layout_width="match_parent"
    android:layout_height="27dp"
    android:layout_below="@+id/section_bar">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:src="@mipmap/btn_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_switch_light"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_record_light_off" />

        <ImageView
            android:id="@+id/iv_capture_frame"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/btn_capture_frame" />

        <ImageView
            android:id="@+id/iv_switch_camera"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/icon_record_switch_camera" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="60dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/btn_record_next_selector"
        android:enabled="false"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="12sp" />

</RelativeLayout>